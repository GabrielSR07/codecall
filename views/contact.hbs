   <div class="container">
     <div class="row justify-content-center">
       <div class="col-md-5">

            <br>
            <h1 class="text-center">Contáctanos!</h1>
            <br>
            <br>
            <form method="post" action="./contact">
              
                {{#each errorMessages}}
                    <div class="alert alert-danger">
                      {{this.param}} : {{this.msg}}
                    </div>
                {{/each}}

                <div class="mb-3">
                  <label class="form-label">Nombre:</label>
                  <input type="text" class="form-control" placeholder="Nombre" name="name" value={{name}}>
                </div>
                <div class="mb-3">
                  <label class="form-label">Email:</label>
                  <input type="email" class="form-control" placeholder="email@example.com" name="email" value={{email}}>
                </div>
                <div class="mb-3">
                  <label class="form-label">Mensaje:</label>
                  <p></p>
                  <textarea row="3" class="form-control" placeholder="Escribe aquí tu mensaje..." name="message">{{message}}</textarea>
                </div>

                <div class="mb-3 justify-content-center">
                  
                  <button type="submit" class="btn btn-success send">Enviar</button>
                  
                </div>
            </form>

