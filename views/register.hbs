
<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-4">
            <form  action="./register" method="post" class="form-signin">

                {{#each errorMessages}}
                    <div class="alert alert-danger">
                    {{this.param}} : {{this.msg}}
                    </div>
                {{/each}}
                
                <br>
                <h1 class="text-center">Regístrate</h1>
                <br>
                <br>
                <input type="text" class="form-control" name="name" placeholder="Nombre" autofocus value={{name}} ><br/>
                <input type="email" class="form-control" name="email" placeholder="email@example.com"  value={{email}} ><br/>
                <input type="password" class="form-control" name="password" placeholder="Contraseña"  value={{password}} ><br/>
                <input type="password" class="form-control" name="confirm_password" placeholder="Confirma contraseña" ><br/>
                <button  class="btn btn-success w-100" type="submit">Regístrate</button>
                <br>
                <br>
                {{!-- <h4 class="text-center">--- O --- </h4>
                <br>
                <a href="../auth/facebook" class="btn btn-primary w-100" >Register with Facebook</a>
                 --}}

            </form>
        </div>
    </div>
</div>
